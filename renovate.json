{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "schedule": ["every weekend"],
  "semanticCommits": "enabled",
  "prHourlyLimit": 4,
  "timezone": "UTC",
  "dependencyDashboard": true
}